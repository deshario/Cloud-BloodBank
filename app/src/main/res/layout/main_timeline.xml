<?xml version="1.0" encoding="utf-8"?>
 <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/default_bootstrap"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="2dp"
    card_view:cardMaxElevation="0dp"
    card_view:cardUseCompatPadding="true">


    <LinearLayout
        android:id="@+id/linear_border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/cardview_border">

        <!-- image - android:scaleType="centerCrop"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/material_red"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location : "
            android:textColor="@color/default_bootstrap"
            android:padding="10sp"
            android:textSize="18sp"
            android:drawableLeft="@drawable/ic_place_white_24dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />

        <ImageButton
            android:id="@+id/record_options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:padding="10dp"
            android:background="@null"
            android:src="@drawable/ic_more_vert_white_24dp"/>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="vertical"
            android:gravity="left">

            <TextView
                android:id="@+id/requester_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Requester : "
                android:drawableLeft="@drawable/ic_person_outline_white_24dp"
                android:drawableTint="@color/material_red"
                android:textSize="18sp"
                android:drawablePadding="5dp"/>

            <TextView
                android:id="@+id/bloodgroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="BloodGroup : "
                android:drawableLeft="@drawable/ic_verified_user_white_24dp"
                android:drawableTint="@color/material_red"
                android:textSize="18sp"
                android:drawablePadding="5dp"
                />

            <TextView
                android:id="@+id/reason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Reason : "
                android:textSize="18sp"
                android:drawableLeft="@drawable/ic_info_outline_white_24dp"
                android:drawableTint="@color/material_red"
                android:drawablePadding="5dp"
                />

            <TextView
                android:id="@+id/tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Tel : "
                android:textSize="18sp"
                android:drawableLeft="@drawable/ic_place_white_24dp"
                android:drawableTint="@color/material_red"
                android:drawablePadding="5dp"
                />


            <TextView
                android:id="@+id/show_image_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Show Image"
                android:layout_gravity="center"
                android:padding="8dp"
                android:background="@drawable/rounded_corner"
                android:textSize="18sp"
                android:textColor="@color/default_bootstrap"
                />

            <!--<ImageView-->
                <!--android:layout_gravity="center"-->
                <!--android:id="@+id/img_icon"-->
                <!--android:layout_width="100dp"-->
                <!--android:layout_height="80dp"-->
                <!--android:contentDescription="@string/app_name"-->
                <!--android:layout_alignParentTop="true"-->
                <!--android:src="@drawable/user_male"-->
                <!--android:layout_centerHorizontal="true"/>-->


            <View
                android:id="@+id/line_view"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/dark_gray"
                />

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginTop="-5dp"
                android:layout_marginBottom="5dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/navigate_btn"
                        android:layout_marginLeft="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Navigate"
                        android:textColor="@color/success_bootstrap"
                        style="?android:attr/borderlessButtonStyle"
                        android:drawableLeft="@drawable/ic_place_white_24dp"
                        android:drawableTint="@color/success_bootstrap"/>

                </LinearLayout>

                <Button
                    android:id="@+id/reject_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reject"
                    android:textColor="@color/material_red"
                    style="?android:attr/borderlessButtonStyle"
                    android:drawableLeft="@drawable/ic_close_white_24dp"
                    android:drawableTint="@color/material_red"/>

                <Button
                    android:id="@+id/accept_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Accept"
                    android:textColor="@color/primary_deshario"
                    android:drawableLeft="@drawable/ic_verified_user_white_24dp"
                    android:drawableTint="@color/primary_deshario"
                    style="?android:attr/borderlessButtonStyle"/>

            </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>



