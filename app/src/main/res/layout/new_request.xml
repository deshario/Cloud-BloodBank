<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardBackgroundColor="@color/default_bootstrap"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="2dp"
    card_view:cardMaxElevation="0dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/main_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/cardview_border"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/material_red"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:text="Blood Request"
                android:textColor="@color/default_bootstrap"
                android:textSize="22sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

        </LinearLayout>


        <ScrollView
            android:id="@+id/scroller"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:scrollbarThumbVertical="@android:color/transparent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Select Bloodgroup"
                        android:textColor="@color/f8"
                        android:textSize="16sp" />

                    <View
                        android:id="@+id/line_view1"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginBottom="5dp"
                        android:background="@color/dark_gray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp">

                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scrollbarThumbHorizontal="@android:color/transparent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <RadioGroup
                                    android:id="@+id/radiogroup"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <RadioButton
                                        android:id="@+id/radio0"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/circle_blood_type"
                                        android:button="@android:color/transparent"
                                        android:checked="true"
                                        android:gravity="center"
                                        android:padding="10dp"
                                        android:text="A+"
                                        android:textColor="@drawable/blood_type_selected"
                                        android:textSize="22sp"
                                        android:textStyle="bold" />

                                    <RadioButton
                                        android:id="@+id/radio1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:background="@drawable/circle_blood_type"
                                        android:button="@android:color/transparent"
                                        android:checked="false"
                                        android:gravity="center"
                                        android:padding="10dp"
                                        android:text="A-"
                                        android:textColor="@drawable/blood_type_selected"
                                        android:textSize="22sp"
                                        android:textStyle="bold" />

                                    <RadioButton
                                        android:id="@+id/radio2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:background="@drawable/circle_blood_type"
                                        android:button="@android:color/transparent"
                                        android:checked="false"
                                        android:gravity="center"
                                        android:padding="10dp"
                                        android:text="B+"
                                        android:textColor="@drawable/blood_type_selected"
                                        android:textSize="22sp"
                                        android:textStyle="bold" />

                                    <RadioButton
                                        android:id="@+id/radio3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:background="@drawable/circle_blood_type"
                                        android:button="@android:color/transparent"
                                        android:checked="false"
                                        android:gravity="center"
                                        android:padding="10dp"
                                        android:text="B-"
                                        android:textColor="@drawable/blood_type_selected"
                                        android:textSize="22sp"
                                        android:textStyle="bold" />

                                    <RadioButton
                                        android:id="@+id/radio4"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:background="@drawable/circle_blood_type"
                                        android:button="@android:color/transparent"
                                        android:checked="false"
                                        android:gravity="center"
                                        android:padding="10dp"
                                        android:text="O+"
                                        android:textColor="@drawable/blood_type_selected"
                                        android:textSize="22sp"
                                        android:textStyle="bold" />

                                    <RadioButton
                                        android:id="@+id/radio5"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:background="@drawable/circle_blood_type"
                                        android:button="@android:color/transparent"
                                        android:checked="false"
                                        android:gravity="center"
                                        android:padding="10dp"
                                        android:text="O-"
                                        android:textColor="@drawable/blood_type_selected"
                                        android:textSize="22sp"
                                        android:textStyle="bold" />

                                    <RadioButton
                                        android:id="@+id/radio6"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:background="@drawable/circle_blood_type"
                                        android:button="@android:color/transparent"
                                        android:checked="false"
                                        android:gravity="center"
                                        android:padding="10dp"
                                        android:text="AB+"
                                        android:textColor="@drawable/blood_type_selected"
                                        android:textSize="22sp"
                                        android:textStyle="bold" />

                                    <RadioButton
                                        android:id="@+id/radio7"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:background="@drawable/circle_blood_type"
                                        android:button="@android:color/transparent"
                                        android:checked="false"
                                        android:gravity="center"
                                        android:padding="10dp"
                                        android:text="AB-"
                                        android:textColor="@drawable/blood_type_selected"
                                        android:textSize="22sp"
                                        android:textStyle="bold" />
                                </RadioGroup>

                            </LinearLayout>

                        </HorizontalScrollView>

                    </LinearLayout>

                    <View
                        android:id="@+id/line_view"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/dark_gray" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <EditText
                            android:id="@+id/username"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/editext_red_border"
                            android:drawableLeft="@drawable/ic_person_outline_white_24dp"
                            android:drawablePadding="16dp"
                            android:drawableTint="@color/default_bootstrap"
                            android:hint="Username"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:singleLine="true" />


                        <EditText
                            android:id="@+id/location"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/editext_red_border"
                            android:drawableLeft="@drawable/ic_place_white_24dp"
                            android:drawablePadding="16dp"
                            android:drawableTint="@color/default_bootstrap"
                            android:hint="Location"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:singleLine="true" />

                        <EditText
                            android:id="@+id/email"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/editext_red_border"
                            android:drawableLeft="@drawable/ic_person_outline_white_24dp"
                            android:drawablePadding="16dp"
                            android:drawableTint="@color/default_bootstrap"
                            android:hint="Email"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:singleLine="true" />

                        <EditText
                            android:id="@+id/myage"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/editext_red_border"
                            android:drawableLeft="@drawable/ic_person_outline_white_24dp"
                            android:drawablePadding="16dp"
                            android:drawableTint="@color/default_bootstrap"
                            android:hint="Age"
                            android:inputType="numberDecimal"
                            android:maxLength="2"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:singleLine="true" />

                        <EditText
                            android:id="@+id/image"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/editext_red_border"
                            android:drawableLeft="@drawable/ic_insert_photo_white_24dp"
                            android:drawablePadding="16dp"
                            android:drawableTint="@color/default_bootstrap"
                            android:hint="Click here to insert image"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:singleLine="true"
                            android:focusable="false"
                            android:focusableInTouchMode="false"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="8dp">

                        <Button
                            android:id="@+id/clear_form"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/rounded_corner"
                            android:text="CLEAR "
                            android:textColor="@color/default_bootstrap"
                            android:textSize="18sp"/>


                        <Button
                            android:layout_marginLeft="5dp"
                            android:id="@+id/request_btn"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/rounded_corner"
                            android:text="Request "
                            android:textColor="@color/default_bootstrap"
                            android:textSize="18sp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>


    </LinearLayout>

</android.support.v7.widget.CardView>