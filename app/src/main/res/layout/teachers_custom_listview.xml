<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/android_list_view_tutorial_with_example"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="7dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/listview_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="@string/app_name"
            android:padding="10dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="7dp"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/listview_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="title"
                android:textSize="16sp"
                android:textColor="@color/primary_bootstrap"/>

            <TextView
                android:id="@+id/listview_item_short_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:text="desc"
                android:textSize="12sp"
                android:textColor="@color/f8"/>

        </LinearLayout>

    </LinearLayout>



    <!--<ImageView-->
        <!--android:id="@+id/listviaew_image"-->
        <!--android:layout_width="60dp"-->
        <!--android:src="@color/primary_deshario"-->
        <!--android:layout_height="60dp"-->
        <!--android:layout_gravity="right"-->
        <!--android:contentDescription="@string/app_name"-->
        <!--android:padding="10dp" />-->



    <ImageView
        android:id="@+id/info"
        android:layout_width="60dp"
        android:src="@drawable/info_outline_primary_24dp"
        android:layout_height="60dp"
        android:layout_gravity="right"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/app_name"
        android:padding="10dp" />




</RelativeLayout>